<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
</head>
<body>
  <%- include('partials/header.ejs') %>
  
  <main class="main">
    <%- include('partials/navbar.ejs') %>
    <!-- miolo da pÃ¡gina -->
    <div class="text">
      <h1>Posts</h1>
      <div class="posts">
        <% posts.forEach((item) => { %>
          <div class="post">
            <h3><%= item.title %></h3>
            <p><%= item.text %></p>
            <% if(item.stars) { %>
              <% for( let index = 0; index < item.stars; index++ ) { %>
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/99/Star_icon_stylized.svg/2153px-Star_icon_stylized.svg.png" alt="star" width="20">
              <% } %>  
            <% } %>
          </div>
        <%}) %>
      </div>
    </div>
  </main>

  <%- include('partials/footer.ejs') %>
  <%- include('partials/foot.ejs') %>
</body>
</html>